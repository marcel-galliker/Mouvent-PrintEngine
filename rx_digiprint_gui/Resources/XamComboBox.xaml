                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <igPrim:MultiColumnComboItemsPanel x:Name="ItemsPanel" Stylus.IsPressAndHoldEnabled="False" Grid.Row="1">
