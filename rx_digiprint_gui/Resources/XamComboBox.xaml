                                        <igPrim:PopupResizer x:Name="Resizer" Visibility="Collapsed" Grid.ColumnSpan="2" IsTabStop="False" Popup="{Binding ElementName=Popup}" Grid.Row="2" ResizeElement="{Binding ElementName=RootPopupElement}">
