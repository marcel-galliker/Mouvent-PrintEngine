<UserControl
             x:Class="RX_DigiPrint.Views.NetworkView"
 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:igGrids="http://infragistics.com/DataPresenter"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             xmlns:converters="clr-namespace:RX_DigiPrint.Converters"
             xmlns:models="clr-namespace:RX_DigiPrint.Models"
             xmlns:Infragistics="clr-namespace:Infragistics;assembly=InfragisticsWPF4.Controls.Grids.XamGrid.v13.2"
             xmlns:rx_uc="clr-namespace:RX_DigiPrint.Views.UserControls"
             mc:Ignorable="d" 
             x:Name="_this"
             d:DesignHeight="600" d:DesignWidth="1200"
            >
    <UserControl.Resources>
        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">32</sys:Double>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- toolbar LEFT _______________________________________________________ -->
        <rx_uc:CommandButtons/>

        <!-- toolbar RIGHT _______________________________________________________ -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
           <Button x:Name="Keyboard" Style="{DynamicResource ToolButtonStyle}" Click="Keyboard_Clicked">
                <Image Source="../Resources/Bitmaps/kbd.png" Margin="8"/>
            </Button>
            <Button x:Name="Button_Save" Style="{DynamicResource ToolButtonStyle}" Click="Save_Clicked">
                <Image Source="{StaticResource save_ico}"/>
            </Button>
            <Button x:Name="Button_Reload" Style="{DynamicResource ToolButtonStyle}" Click="Reload_Clicked">
                <Image Source="{StaticResource reload_ico}"/>
            </Button>
            <Button x:Name="Button_Delete" Style="{DynamicResource ToolButtonStyle}" Click="Delete_Clicked">
                <Image Source="{StaticResource delete_ico}"/>
            </Button>
        </StackPanel>
        
        <ig:XamGrid 
			x:Name="NetworkGrid" 
            Grid.Row="1"
            AutoGenerateColumns="False"  
            HeaderStyle="{DynamicResource XamGridHeaderStyle}"
            CellStyle="{DynamicResource XamGridCellControlStyle}"
            CellExitedEditMode="NetworkGrid_CellExitedEditMode"
            Background="Transparent"
            >
            <ig:XamGrid.SelectionSettings>
                <ig:SelectionSettings CellSelection="None" ColumnSelection="None" RowSelection="Single" CellClickAction="SelectRow"/>
            </ig:XamGrid.SelectionSettings>
            <!--
            <ig:XamGrid.EditingSettings>
                <ig:EditingSettings AllowEditing="Cell"/>
            </ig:XamGrid.EditingSettings>
            -->
            <ig:XamGrid.Columns>
                <ig:TemplateColumn  HeaderText="Connected"      Key="Connected"     Width="auto">
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="80" VerticalAlignment="Center">
                                <Image Source="{Binding Connected, Converter={StaticResource Connected_Converter}}" Height="32" />
                            </Grid>
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>

                <ig:TemplateColumn  HeaderText="Type" Key="DeviceType" Width="auto">
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DeviceType, Converter={StaticResource DeviceType_Converter}}"/>
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>
                
                <ig:TemplateColumn  HeaderText="No" Key="DeviceNo" Width="auto">
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <ComboBox
                            GotFocus="ComboBox_GotFocus"
                            LostFocus="ComboBox_LostFocus"
                            SelectionChanged="DeviceNo_Changed"
                            MinWidth="50"
                            Width="auto" 
                            ItemsSource="{Binding DeviceNoList}" 
                            DisplayMemberPath="Display" 
                            SelectedValue="{Binding DeviceNo}"
                            SelectedValuePath="Value"
                            IsEnabled="{Binding DeviceNoEnabled}"
                            Visibility="{Binding DeviceType, Converter={StaticResource DeviceNoVisible_Converter}}"
                            />
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>

                <ig:TextColumn      HeaderText="IP Address"     Key="IpAddr"        Width="auto" IsReadOnly="True" />

                <ig:TextColumn      
                    HeaderText="Mac Address"    
                    Key="MacAddr"       
                    MinimumWidth="150"
                    Width="auto"
                    ValueConverter="{StaticResource MacAddr_Converter}"
                    ValueConverterParameter="{Binding DeviceType}"
                    IsReadOnly="True" 
                    />

                <ig:TextColumn      
                    HeaderText="SerialNo"       
                    Key="SerialNo"
                    Width="150" 
                    IsReadOnly="True"
                    />
 
                <ig:TemplateColumn  
                    HeaderText="Identify"          
                    Key="Flash"         
                    VerticalContentAlignment="Stretch" 
                    HorizontalContentAlignment="Stretch"
                    >
                    <!-- Visibility="{Binding DeviceType, Converter={StaticResource DeviceNoVisible_Converter}}" -->
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <Button 
                                BorderThickness="1" 
                                BorderBrush="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" 
                                Click="Flash_Clicked" 
                                Background="#FFF4F4F4"
                                Visibility="{Binding DeviceType, Converter={StaticResource DeviceNoVisible_Converter}}"
                                >
                                    <TextBlock Text="{Binding Flash, Converter={StaticResource CheckBox_Converter}}" FontFamily="Wingdings" Foreground="#FF0EE20E" FontWeight="Bold" FontSize="28"/>
                            </Button>
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>
                
                <ig:TemplateColumn  
                    HeaderText="Putty"          
                    Key="PuttyDebug"         
                    VerticalContentAlignment="Stretch" 
                    HorizontalContentAlignment="Stretch"
                    >
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <Button 
                                BorderThickness="1" 
                                Click="PuttyDebug_Clicked"
                                >
                                <StackPanel Orientation="Horizontal" Margin="10,2">
                                    <Image Source="..\Resources\Bitmaps\PuTTY.png" Height="32"/>
                                    <TextBlock Text="debug" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="red"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>

                <ig:TemplateColumn  
                    HeaderText="Putty"          
                    Key="Putty"         
                    VerticalContentAlignment="Stretch" 
                    HorizontalContentAlignment="Stretch"
                    >
                    <ig:TemplateColumn.ItemTemplate>
                        <DataTemplate>
                            <Button 
                                BorderThickness="1" 
                                Click="Putty_Clicked" 
                                >
                                <StackPanel Orientation="Horizontal" Margin="10,2">
                                    <Image Source="..\Resources\Bitmaps\PuTTY.png" Height="32"/>
                                    <TextBlock Text="console" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ig:TemplateColumn.ItemTemplate>
                </ig:TemplateColumn>

                <ig:UnboundColumn Key="filler" HeaderText=" " ValueConverter="{StaticResource Filler_Converter}" Width="*"/>
            </ig:XamGrid.Columns>
        </ig:XamGrid>

        <!--
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Save"   HorizontalAlignment="Right" Margin="0,0,20,0"  Padding="10,0"  Click="Save_Clicked" />
            <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,20,0"  Padding="10,0"  Click="Cancel_Clicked"/>
        </StackPanel>
        -->
    </Grid>
</UserControl>
