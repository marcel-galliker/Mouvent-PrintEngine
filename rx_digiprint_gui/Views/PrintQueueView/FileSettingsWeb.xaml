        <GroupBox x:Name="Length_Settings"
            Grid.Row="0" Grid.Column="0" 
            Header="Length"
            >
            <!-- Visibility ="{Binding Variable, Converter={StaticResource BoolToInVisible_Converter}}" -->
            <Grid HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Length" />
                <common:RxNumBox   Grid.Row="0" Grid.Column="1" Text="{Binding ScanLength}" HorizontalAlignment="Right" Width="60" x:Name="LengthBox" Min="0"/>
                <StackPanel  Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <common:RxRadioButton Content="m"       Background="Transparent" IsChecked="{Binding LengthUnitMM}"/>
                    <common:RxRadioButton Content="copies"  Background="Transparent" IsChecked="{Binding LengthUnitCopies}" Last="True"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Pages ___________________________________________________________________ -->
        <GroupBox x:Name="Page_Settings" Header="Pages">
            <!-- Visibility="{Binding Variable, Converter={StaticResource BoolToVisible_Converter}}" -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Column="0" Text="From"/>
                <common:RxNumBox   Grid.Column="1" Text="{Binding FirstPage}" HorizontalContentAlignment="Right" Min="0" IsInt="True"/>
                <TextBlock Grid.Column="3" Text="To"/>
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <common:RxNumBox Text="{Binding LastPage}" Width="60" HorizontalContentAlignment="Right" Min="0" IsInt="True"/>
                    <TextBlock Text=" ("/>
                    <TextBlock Text="{Binding SrcPages}"/>
                    <TextBlock Text=")"/>
                </StackPanel>
                
                <TextBlock   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Copies"/>
                <common:RxNumBox Grid.Row="1" Grid.Column="1" Text="{Binding Copies}" HorizontalContentAlignment="Right" Min="0" IsInt="True"/>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="Collate"/>
                <igWPF:XamComboEditor Grid.Row="1" Grid.Column="4" 
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding CollateList}"
                    Value="{Binding Collate}"
                    DisplayMemberPath="Display"
                    ValuePath="Value" 
                    DropDownResizeMode="None"
                    >
                </igWPF:XamComboEditor>


            </Grid>
        </GroupBox>
        
        <!-- Start ___________________________________________________________________ -->
        <GroupBox x:Name="Start_Settings" Header="Start">
            <!-- Visibility="{Binding Variable, Converter={StaticResource BoolToVisible_Converter}}" -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Copy"/>
                <common:RxNumBox Grid.Column="1" Text="{Binding StartFrom}" HorizontalContentAlignment="Right" Min="0" IsInt="True"/>

                <TextBlock       x:Name="StartPageTxt" Grid.Column="3" Text="Page" />
                <common:RxNumBox x:Name="StartPageNum" Grid.Column="4" Text="{Binding StartPage}" HorizontalContentAlignment="Right"/>
            </Grid>
        </GroupBox>

        <!-- RIP Settings _____________________________________________________________________________-->
        <GroupBox Header="Rip Settings" HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Print Environment" Visibility="{Binding Ripped, Converter={StaticResource IntToInVisible_Converter}}"/>
                <!--
                <ig:XamComboEditor Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Width="200" HorizontalAlignment="Left">
                </ig:XamComboEditor>
                -->
                <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch"
                    ItemsSource="{Binding PrintEnvList}"
                    SelectedValue="{Binding PrintEnv}"
                    Visibility="{Binding Ripped, Converter={StaticResource IntToInVisible_Converter}}"
                />

                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Orientation" Visibility="{Binding Ripped, Converter={StaticResource IntToInVisible_Converter}}"/>
                <igWPF:XamComboEditor Grid.Row="1" Grid.Column="1" 
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding OrientationList}"
                    Value="{Binding Orientation}"
                    DisplayMemberPath="Display"
                    ValuePath="Value" 
                    DropDownResizeMode="None"
                    Visibility="{Binding Ripped, Converter={StaticResource IntToInVisible_Converter}}"
                    >
                </igWPF:XamComboEditor>

                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Speed"/>
                <rx:RxComboBox x:Name="CB_Speed"
                    Grid.Row="2" Grid.Column="1"
                    SelectedValue="{Binding Speed}"
                    HorizontalContentAlignment="Right"
                    />            
                <TextBlock  Grid.Row="2" Grid.Column="3" Text="m/min" Margin="5,0,0,0"/>

                <TextBlock          Grid.Row="3" Grid.Column="0" Text="Image Margin" />
                <common:RxNumBox    Grid.Row="3" Grid.Column="1" Text="{Binding PageMargin}" HorizontalAlignment="Stretch"/>
                <TextBlock          Grid.Row="3" Grid.Column="2" Text="mm" Margin="5,0,0,0" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="PrintGo Mode" VerticalAlignment="Center"/>
                <rx:RxComboBox x:Name="CB_PrintGoMode"
                    Grid.Row="4" Grid.Column="1"
                    SelectedValue="{Binding PrintGoMode}"
                    ImageBox="true"
                    >
                </rx:RxComboBox>

                <TextBlock          Grid.Row="5" Grid.Column="0" Text="Image Distance" />
                <common:RxNumBox    Grid.Row="5" Grid.Column="1" Text="{Binding PrintGoDist}" HorizontalAlignment="Stretch" Min="0"/>
                <TextBlock          Grid.Row="5" Grid.Column="2" Text="mm" Margin="5,0,0,0" />

            </Grid>
        </GroupBox>

        <uc:PreviewWeb Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" 
                    Width="250"
                    Height="auto" MinHeight="100"
                    HorizontalAlignment="Left" 
                    Margin="40,5,0,0"
                    Source="{Binding Preview}"
                    Orientation="{Binding Orientation}"/>

        <Grid Grid.Row="3" Grid.ColumnSpan="3" x:Name="ShowButtonGrid" Visibility="{Binding Changed, Converter={StaticResource IntToVisible_Converter}}">
            <common:RxButton x:Name="SaveButton"  Click="Save_Click" HorizontalAlignment="Left">
                <Image Source="{StaticResource Yes_ico}"/>
            </common:RxButton>

            <common:RxButton x:Name="SaveDefault" Click="Save_Default_Click" HorizontalAlignment="Center">
                <Image Source="{StaticResource YesSave_ico}"/>
            </common:RxButton>

            <common:RxButton x:Name="CancelButton" Click="Cancel_Click" HorizontalAlignment="Right">
                <Image Source="{StaticResource No_ico}"/>
            </common:RxButton>
        </Grid>

    </StackPanel>
</UserControl>
