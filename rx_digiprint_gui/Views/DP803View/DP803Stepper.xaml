<UserControl x:Class="RX_DigiPrint.Views.DP803View.DP803Stepper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rx_uc="clr-namespace:RX_DigiPrint.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <rx_uc:CleaningView HorizontalAlignment="Right" Width="200"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <rx_uc:StepperMotorCtrl DataContext="{Binding Motors[0]}" Header="1" Width="270"/>
            <rx_uc:StepperMotorCtrl DataContext="{Binding Motors[1]}" Header="2" Width="270"/>
            <rx_uc:StepperMotorCtrl DataContext="{Binding Motors[2]}" Header="3" Width="270"/>
            <rx_uc:StepperMotorCtrl DataContext="{Binding Motors[3]}" Header="4" Width="270"/>
        </StackPanel>
    </Grid>
</UserControl>
