<UserControl x:Class="RX_DigiPrint.Views.TexView.TexMachine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:RX_Common;assembly=rx_common_lib_cs"
             mc:Ignorable="d" 
             d:DesignHeight="250" >
    
    <UserControl.Resources>
        <Style x:Key="{x:Type common:RxButton}" TargetType="{x:Type common:RxButton}" BasedOn="{StaticResource {x:Type common:RxButton}}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Margin="0,5"
                x:Name="MachineImg" 
                
                Source="..\..\Resources\Bitmaps\Tex\TX801.tif" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                Height="250"
            />
        <Grid x:Name="ButtonsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" /> <!-- 0 -->
                <ColumnDefinition Width="15*" /> <!-- 1 Unwinder -->
                <ColumnDefinition Width="5*" />  <!-- 2 Presure Roller-->
                <ColumnDefinition Width="12*" /> <!-- 3 gap -->
                <ColumnDefinition Width="5*" />  <!-- 4 Air Knife -->
                <ColumnDefinition Width="5*" />  <!-- 5 Washing Unit -->
                <ColumnDefinition Width="11*" /> <!-- 6 gap -->
                <ColumnDefinition Width="12*" /> <!-- 7 dryer -->
                <ColumnDefinition Width="15*" /> <!-- 8 rewinder -->
                <ColumnDefinition Width="10*" /> <!-- 9 gap-->
            </Grid.ColumnDefinitions>

            <common:RxButton Grid.Row="0" Grid.Column="0" x:Name="PAR_ALL_ON" Click="OnOff_Clicked">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="ALL" HorizontalAlignment="Center" FontSize="{StaticResource FontSizeLarge}" FontWeight="Bold"/>

            <common:RxButton Grid.Row="0" Grid.Column="1" x:Name="PAR_WINDER_1_ON" Click="OnOff_Clicked">
              <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="0" Grid.Column="2" x:Name="PAR_PRESSURE_ROLLER_ON" Click="OnOff_Clicked">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="0" Grid.Column="3" x:Name="PAR_SLIDE_ON" Click="OnOff_Clicked" HorizontalAlignment="Right">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="1" Grid.Column="3" x:Name="PAR_BELT_ON" Click="OnOff_Clicked" HorizontalAlignment="Right">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="2" Grid.Column="5" x:Name="PAR_WASHING_UNIT_ON" Click="OnOff_Clicked">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="1" Grid.Column="6" x:Name="PAR_FABRIC_SENSOR_ON" Click="OnOff_Clicked" HorizontalAlignment="Left">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="0" Grid.Column="7" x:Name="PAR_DRYER_ON" Click="OnOff_Clicked">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

            <common:RxButton Grid.Row="0" Grid.Column="8" x:Name="PAR_WINDER_2_ON" Click="OnOff_Clicked">
                <Image Source="../../Resources/Bitmaps/ON_OFF.ico"/>
            </common:RxButton>

        </Grid>
    </Grid>
</UserControl>
