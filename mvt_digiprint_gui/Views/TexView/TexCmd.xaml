<UserControl x:Class="RX_DigiPrint.Views.TexView.TexCmd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:rx_uc="clr-namespace:RX_DigiPrint.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mvt="clr-namespace:RX_DigiPrint.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">

    <GroupBox Style="{StaticResource MvtGroupBox}" Header="{mvt:LocalizedBinding Commands}">
        <rx_uc:PlcParPanel UnitID="Application.GUI_00_001_Main">
            <rx_uc:PlcCommand ID="CMD_CLEAR_ERROR"      Label="{mvt:LocalizedBinding ClearError}"/>

            <rx_uc:PlcTitle />
            <rx_uc:PlcCommand ID="CMD_WASHING_UNIT_UP"   Label="{mvt:LocalizedBinding WashingUp}"  IsEnabled="{Binding InWebIn}"/>
            <rx_uc:PlcCommand ID="CMD_SLIDE_TO_PURGE"    Label="{mvt:LocalizedBinding PurgePos}" User="usr_service"/>
            <rx_uc:PlcCommand ID="CMD_SLIDE_TO_WIPE"     Label="{mvt:LocalizedBinding WipePos}"  User="usr_service"/> 

        </rx_uc:PlcParPanel>
    </GroupBox>
</UserControl>
